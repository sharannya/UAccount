<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    >
    <TextView
        android:id="@+id/tv_iban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:padding="@dimen/padding"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/iban_text"/>
    <TextView
        android:id="@+id/tv_account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:padding="@dimen/padding"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/balance_text"
        android:layout_below="@+id/tv_iban"/>
    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_account_balance"
        android:textStyle="normal"
        android:padding="@dimen/padding"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/name_text"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_account_name"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>